    /home/angel/.rofi-themes/rofi-wifi-menu/rofi-wifi-menu.sh &
super + shift + s
    eidolon menu
super + alt + e
    /home/angel/.rofi-themes/rofi-epiclauncher.sh &
super + v
    vivaldi-stable
super + shift + l
    rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}' -theme .rofi-themes/runnerforclip.rasi
super + y
	ytfzf -D
super + alt + l
    i3lock-fancy
super + alt + k
    /home/angel/.rofi-themes/naivecalendar/src/naivecalendar.sh
